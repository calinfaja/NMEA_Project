// tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Program",
            "type": "shell",
            "command": "${workspaceFolder}/build/gpsd_reader.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": ["CMake Build"]  // This ensures build happens before run
        },
        {
            "label": "Run with Test File",
            "type": "shell",
            "command": "${workspaceFolder}/build/gpsd_reader.exe",
            "args": ["${workspaceFolder}/test/sample.nmea"],
            "group": "test",
            "dependsOn": ["CMake Build"]
        },
        {
            "label": "Clean and Build",
            "type": "shell",
            "command": "rm -rf ${workspaceFolder}/build/* && cmake --build ${workspaceFolder}/build",
            "group": "build"
        }
    ]
}